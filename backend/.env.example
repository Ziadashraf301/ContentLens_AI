# App
APP_NAME=ContentLens_AI
ENV=development
LOG_LEVEL=INFO

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_EXTRACTOR=llama3.1
OLLAMA_MODEL_ROUTER=mistral
OLLAMA_MODEL_SUMMARIZER=llama3.1
OLLAMA_MODEL_TRANSLATOR=mistral
OLLAMA_MODEL_ANALYZER=llama3.1
OLLAMA_MODEL_RECOMMENDER=llama3.1
OLLAMA_MODEL_IDEATION=llama3.1
OLLAMA_MODEL_COPYWRITER=llama3.1

# Marketing flags
# Require explicit consent for marketing workflows (true/false)
MARKETING_REQUIRE_CONSENT=true
# Require human approval for content before publishing (true/false)
MARKETING_REQUIRE_HUMAN_APPROVAL=true

# Langfuse
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# Files
MAX_FILE_SIZE_MB=20
ALLOWED_EXTENSIONS=pdf,docx,txt,png,jpg,jpeg
